# ============================================================================
# Sistema MLF - Variables de Entorno
# ============================================================================

# Servidor
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de Datos PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/mlf_db?schema=public"

# JWT Autenticación
JWT_SECRET=tu_secreto_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:5173

# Logs
LOG_LEVEL=debug

# Tasas y Configuraciones (Valores por defecto - se pueden sobrescribir desde DB)
TASA_INTERES_NORMAL=1.5
TASA_INTERES_CASTIGO=3.0
TASA_INTERES_MORA_DIARIO=1.0

# Notificaciones (Futuro)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Límites de API
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
